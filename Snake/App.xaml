<Application x:Class="Snake.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snake"
             StartupUri="Menu.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="MenuBackgroundColor">#8EA987</SolidColorBrush> <!--Определение цвета заднего фона меню-->
        <SolidColorBrush x:Key="BackgroundColor">#2D3C29</SolidColorBrush> <!--Определение цвета заднего фона игры-->
        <SolidColorBrush x:Key="GridBackgroundColor">#487048</SolidColorBrush> <!--Определение цвета заднего фона сетки-->
        <SolidColorBrush x:Key="GridLineColor">#4B6245</SolidColorBrush> <!--Определение цвета границ сетки-->
        <SolidColorBrush x:Key="TextColor" >#FFFF</SolidColorBrush> <!--Определение цвета текста в игре-->
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush> <!--Накладываемый на содержимое окно перед началом игры полупрозрачный объект-->
        <FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily> <!--Установка шрифта-->
    </Application.Resources>
</Application>
